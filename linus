from flask import Flask, jsonify
import requests
from bs4 import BeautifulSoup

app = Flask(__name__)

@app.route('/api/linus')
def linus_ruokalista():
    url = "https://www.unica.fi/ravintolat/kupittaan-kampus/linus/"
    response = requests.get(url)
    soup = BeautifulSoup(response.text, 'html.parser')

    ruokalistat = []
    for päivä in soup.select(".menu-day"):
        otsikko = päivä.select_one(".menu-day__date").text.strip()
        ruoat = [r.text.strip() for r in päivä.select(".menu-item__title")]
        ruokalistat.append({"päivä": otsikko, "ruoat": ruoat})

    return jsonify(ruokalistat)

if __name__ == '__main__':
    app.run()
